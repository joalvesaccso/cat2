{
  "name": "time-project-management-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outfile dist/index.js",
    "start": "bun dist/index.js",
    "db:init": "bun run src/db/init.ts",
    "db:seed": "bun run src/db/seed.ts",
    "test": "vitest",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/cookie": "^0.8.0",
    "arangojs": "^8.8.1",
    "ioredis": "^5.9.2",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.47",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
